{
  "manifest_version": 2,

  "name": "Stock Real Time Alert",
  "description": "Stock real-time tracker and alert",
  "version": "1.0",

  "browser_action": {
    "default_icon": "./resources/stock_alert_extension_icon.png",
    "default_popup": "./src/stock_alert.html"
  },
//  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_security_policy": "script-src 'self' https://www.google.com/finance/info; object-src 'self'",
  "permissions": [
    "http://*/"
  ]
}
